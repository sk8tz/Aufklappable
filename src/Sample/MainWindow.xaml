<Window x:Class="Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:aufklappable="clr-namespace:Aufklappable;assembly=Aufklappable"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Background="Black" />
        <DockPanel Grid.Row="1">

            <aufklappable:AufklappableContainer SelectedItem="1" Margin="5" Padding="5">
                <aufklappable:AufklappableContainer.Items>

                    <aufklappable:AufklappableItem Title="A" Tag="1" Margin="2" Padding="4">
                        <TextBox Background="White"
                                 Text=""
                                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                    </aufklappable:AufklappableItem>

                    <aufklappable:AufklappableItem Title="B" Tag="2" Margin="9" Padding="1">
                        <TextBox Background="White"
                                 Text=""
                                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                    </aufklappable:AufklappableItem>

                    <aufklappable:AufklappableItem Title="C" Tag="3" Margin="4" Padding="7">
                        <TextBox Background="White"
                                 Text=""
                                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                    </aufklappable:AufklappableItem>

                </aufklappable:AufklappableContainer.Items>
            </aufklappable:AufklappableContainer>

        </DockPanel>
        <DockPanel Grid.Row="2" Background="Black" />
    </Grid>
</Window>