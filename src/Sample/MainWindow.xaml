<Window x:Class="Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:aufklappable="clr-namespace:Aufklappable;assembly=Aufklappable"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="525">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Background="Black" />
        <DockPanel Grid.Row="1">

            <aufklappable:AufklappableContainer SelectedItem="2">
                <aufklappable:AufklappableContainer.Items>

                    <aufklappable:AufklappableItem Title="A" Tag="1">
                        <TextBox
                            Text=""
                            TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                    </aufklappable:AufklappableItem>

                    <aufklappable:AufklappableItem Title="B" Tag="2" Foreground="Red">
                        <TextBlock TextWrapping="Wrap"
                                   Text="" />

                    </aufklappable:AufklappableItem>

                    <aufklappable:AufklappableItem Title="C" Tag="3" Background="Aqua"
                                                   VerticalContentAlignment="Bottom">
                        <TextBox Height="20"
                                 Text="aaa"
                                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                    </aufklappable:AufklappableItem>

                    <aufklappable:AufklappableItem Title="D" Tag="4">
                        <TextBox
                            Text="ert"
                            TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                    </aufklappable:AufklappableItem>

                </aufklappable:AufklappableContainer.Items>
            </aufklappable:AufklappableContainer>

        </DockPanel>
        <DockPanel Grid.Row="2" Background="Black" />
    </Grid>
</Window>